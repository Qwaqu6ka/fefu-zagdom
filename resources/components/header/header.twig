{% import _self as macros %}

{% set scope = {
    menu: [
        {
            url: '/',
            name: 'Реализованные прокеты',
        },
        {
            url: '/',
            name: 'Новости',
        },
        {
            url: '/',
            name: 'Контакты',
        },
    ],
    phone: '+7 (900) 900-90-90',
} %}

{% macro logo() %}
    <a href="{{ route('home') }}">
        <img
            src="{{ 'assets/images/logo.png' }}"
            alt="Загородный дом"
        >
    </a>
{% endmacro %}

{% macro phone(val) %}
    <a href="tel: {{ val }}" class="PrimaryPhone">
        <img
            src="{{ 'assets/icons/phone_green.svg' }}"
            alt="Телефон"
            class="PrimaryPhone__icon"
        >
        {{ val }}
    </a>
{% endmacro %}

{% macro button() %}
    <button type="button" class="Button Button_primary">Оставить заявку</button>
{% endmacro %}

{% macro offCanvasButton() %}
    <button type="button" class="Button Button_primary Button_icon" uk-toggle="target: #offcanvas">
        <img
            src="{{ 'assets/icons/offcanvas_button_white.svg' }}"
            alt="Меню"
        >
    </button>
{% endmacro %}

{% macro offCanvas(scope) %}
    <div id="offcanvas" class="OffCanvas" uk-offcanvas="flip: true; overlay: true">
        <div class="uk-offcanvas-bar OffCanvas__layout">
            <button class="uk-offcanvas-close OffCanvas__close" type="button">
                <img 
                    src="{{ 'assets/icons/cross_white.svg' }}"
                    alt="Закрыть"
                >
            </button>
            
            <div class="OffCanvas__nav">
                {% include '@components/site-nav/site-nav.twig' with {
                    items: scope.menu,
                    column: true,
                } %}
            </div>

            <div class="OffCanvas__contacts">
                {% include "@components/contacts/contacts.twig" %}
            </div>
        </div>
    </div>
{% endmacro %}

{% macro content(scope) %}
    <div class="Container Header">
        <div class="Header__logo">
            {{ macros.logo() }}
        </div>

        <nav class="Header__nav">
            {% include '@components/site-nav/site-nav.twig' with {
                items: scope.menu,
            } %}
        </nav>

        <div class="Header__phone">
            {{ macros.phone(scope.phone) }}
        </div>

        <div class="Header__feedbackButton">
            {{ macros.button }}
        </div>

        <div class="Header__offCanvasButton">
            {{ macros.offCanvasButton }}
        </div>
    </div>

    {{ macros.offCanvas(scope) }}
{% endmacro %}

{{ macros.content(scope) }}