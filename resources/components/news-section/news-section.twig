{% import _self as macros %}

{% set scope = {
    news: items ?? [],
} %}

{% macro news(item) %}
    {% set data = {
        image: item.image ?? '',
        date: item.date ?? '',
        title: item.title ?? '',
        text: item.text ?? '',
    } %}
    
    <div class="NewsCard">
        <img
            src="{{ data.image }}"
            alt="{{ data.title }}"
            class="NewsCard__image"
        >
        <span class="NewsCard__date">
            {{ data.date }}
        </span>
        <h3 class="NewsCard__title">
            {{ data.title|raw }}
        </h3>
        <p class="NewsCard__text">
            {% set limit = 56 %}
            {% set text = data.text|length > limit ? data.text|striptags|slice(0, limit) ~ '...' : data.text %}
            {{ text|raw }}
        </p>
    </div>
{% endmacro %}

{% macro content(scope) %}
    <section class="NewsList Container">
        <header class="NewsList__header">
            <h2 class="NewsList__title">
                Новости
            </h2>
            <a href="/" class="Button Button_secondary">
                Все новости
            </a>
        </header>
        <ul class="NewsList__list">
            {% for item in scope.news %}
                <li class="NewsList__item">
                    {{ macros.news(item) }}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endmacro %}

{{ macros.content(scope) }}